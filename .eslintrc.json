{
  "extends": [
    "standard-with-typescript",
    "plugin:react/recommended"
  ],
  "plugins": [
    "jsx-a11y",
    "jest",
    "cypress",
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error"
  },
  "env": {
    "node": true,
    "jest": true,
    "browser": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}