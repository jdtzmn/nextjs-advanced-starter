{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "actions/*": ["./actions/*"],
      "reducers/*": ["./reducers/*"],
      "containers/*": ["./containers/*"],
      "server/*": ["./server/*"],
      "pages/*": ["./pages/*"],
      "layouts/*": ["./layouts/*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ]
  },
  "include": [
    "./node_modules/@types/jest"
  ],
  "exclude": [
    "./jest.config.js"
  ]
}